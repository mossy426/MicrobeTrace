{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": false,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "skipLibCheck": true,
    "strictNullChecks": false,
    "typeRoots": [
      "node_modules/@types",
      "googlemaps"
    ],
    "lib": [
      "es6",
      "es2019",
      "es7",
      "dom"
    ],
    "paths": {
      "@shared/*": [
        "./src/shared/*"
      ],
      "@app/*": [
        "./src/app/*"
      ],
      "@abp/*": [
        "node_modules/abp-ng2-module/dist/src/*"
      ],
      "@metronic/*": [
        "./src/assets/metronic/*"
      ]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": false
  },
  "exclude": [
      "./src/app/visualizationComponents/GanttComponent/*"
  ]
}
